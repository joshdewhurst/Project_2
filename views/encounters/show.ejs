<div>
    <h2>Encounter on <%= encounter.date %></h2>


    <div class="profile" id="show_encounter">
        <div class="profile">
            <h3>
                <%= encounter.partnerName %>
            </h3>
        </div>  
        <div>
            <h4>Encounter Notes:</h4>
            <p>
             <%= encounter.note %>
            </p>
        </div>
        <div>
            <h4>
                Did you use protection?
            </h4>
            <p>
                <%= encounter.protection %>
            </p>
        </div>
                  
    </div>
    
    <form method="POST" action ="/encounters/<%=encounter.id%>/?_method=DELETE">
        <input type="submit" value="delete">
    </form>
    <a href="/encounters">Go Back to All Encounters</a>
</div>
